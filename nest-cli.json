{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/api",
  "monorepo": true,
  "root": "./",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "src/api/tsconfig.api.json"
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "./",
      "entryFile": "main",
      "sourceRoot": "src/api",
      "compilerOptions": {
        "tsConfigPath": "src/api/tsconfig.api.json"
      }
    }
  }
}
